apiVersion: keycloak.org/v1alpha1
kind: KeycloakClient
metadata:
  labels:
    app: openshift
    app.kubernetes.io/instance: rhsso-openshift
    app.kubernetes.io/name: rhsso-openshift
  name: openshift
spec:
  client:
    clientAuthenticatorType: client-secret
    clientId: idp-4-ocp
    defaultClientScopes:
    - profile
    - email
    - roles
    - acr
    - web-origins
    directAccessGrantsEnabled: true
    implicitFlowEnabled: false
    publicClient: false
    redirectUris:
    - https://{{ ocp4_workload_redhat_developer_hub_openshift_redirect_host }}/oauth2callback/keycloak
    standardFlowEnabled: true
  realmSelector:
    matchLabels:
      app: rhsso-openshift
      app.kubernetes.io/instance: rhsso-openshift
      app.kubernetes.io/name: rhsso-openshift
